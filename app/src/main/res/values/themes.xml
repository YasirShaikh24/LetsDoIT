<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.LetsDoIT" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorTertiary">@color/primary_blue</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/background_input</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:navigationBarColor">@color/primary_purple</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>

        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.FilledBox</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LetsDoIT" parent="Base.Theme.LetsDoIT" />

    <style name="CustomPrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="backgroundTint">@color/primary_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/primary_purple</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_purple</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/background_input</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <style name="DayRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_button_text_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
    </style>

    <!-- Navigation Text Styles -->
    <style name="NavTextActive">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NavTextInactive">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>