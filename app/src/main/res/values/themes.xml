<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LetsDoIT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/primary_blue</item>

        <!-- Background colors. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/background_input</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_gradient_start</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/primary_purple</item>

        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Material button style. -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>

        <!-- Text input style. -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.FilledBox</item>

        <!-- Window background. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Disable action bar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LetsDoIT" parent="Base.Theme.LetsDoIT" />

    <!-- Custom button style for primary buttons -->
    <style name="CustomPrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="backgroundTint">@color/primary_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom button style for outlined buttons -->
    <style name="CustomOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/primary_purple</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_purple</item>
    </style>

    <!-- Custom text input layout style -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/background_input</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>
</resources>