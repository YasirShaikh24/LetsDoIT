<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/dialog_task_readonly.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Read-Only Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘ï¸"
                android:textSize="20sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read-Only View (Past Task)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F57C00"/>
        </LinearLayout>

        <!-- Task Title -->
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <!-- Task Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task description goes here"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:background="@color/background_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/tv_dialog_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: PENDING"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_purple"
            android:padding="12dp"
            android:background="@color/background_input"
            android:layout_marginBottom="12dp"/>

        <!-- Dates -->
        <TextView
            android:id="@+id/tv_dialog_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dates: Start - End"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <!-- AI Count -->
        <TextView
            android:id="@+id/tv_dialog_ai_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Count: ABC123"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary_purple"
            android:padding="12dp"
            android:background="@color/background_input"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <!-- Remarks -->
        <TextView
            android:id="@+id/tv_dialog_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remarks: Additional notes"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>

        <!-- Close Button -->
        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="16sp"
            android:background="@drawable/button_primary_background"
            android:textColor="@color/white"
            android:padding="12dp"/>

    </LinearLayout>

</ScrollView>