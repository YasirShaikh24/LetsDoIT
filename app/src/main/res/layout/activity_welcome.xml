<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/activity_welcome.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background">

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome_gradient_overlay" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Top Left Decorative Circle -->
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_decoration"
            android:backgroundTint="#4D5C78"
            android:alpha="0.3"
            android:layout_gravity="start"
            android:layout_marginBottom="-80dp"
            android:translationX="-40dp" />

        <!-- Spacer -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.02"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <!-- Inspirational Quote (FIXED) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Success is not final, failure is not fatal:\nIt is the courage to continue that counts.&quot;"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:layout_marginBottom="48dp"
            android:paddingHorizontal="24dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Login Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_login_card"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginHorizontal="24dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Login"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#5C78A8"
                android:gravity="center"
                android:letterSpacing="0.05" />

        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom Right Decorative Circle -->
        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_decoration"
            android:backgroundTint="#8BACD9"
            android:alpha="0.2"
            android:layout_gravity="end"
            android:layout_marginTop="-120dp"
            android:translationX="60dp" />

    </LinearLayout>

    <!-- Extra Decorative Circles -->
    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_decoration"
        android:backgroundTint="#FFFFFF"
        android:alpha="0.15"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="40dp" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decoration"
        android:backgroundTint="#FFFFFF"
        android:alpha="0.1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="220dp"
        android:layout_marginStart="30dp" />

</RelativeLayout>
