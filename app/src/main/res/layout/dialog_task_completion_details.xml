<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/dialog_task_completion_details.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Task Title -->
    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"/>

    <!-- Success Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F5E9"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textSize="48sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Completed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"/>
    </LinearLayout>

    <!-- Completed By -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/background_input"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_completed_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ“ Completed by: John Doe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_purple"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Completed Date -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/background_input"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_completed_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Dec 14, 2025 at 03:30 PM"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- AI Count (Conditional) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tv_ai_count_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E8F5E9"
        android:layout_marginBottom="24dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”¢ AI Count: ABC123"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Close Button -->
    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_primary_background"
        app:backgroundTint="@color/primary_purple"
        android:padding="12dp"/>

</LinearLayout>