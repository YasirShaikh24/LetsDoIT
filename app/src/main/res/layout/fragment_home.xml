<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_header_gradient"
                android:paddingHorizontal="24dp"
                android:paddingTop="32dp"
                android:paddingBottom="48dp"> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:gravity="top">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textSize="16sp"
                        android:textColor="#B0B8C8"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_welcome_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mohsin Mir"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:letterSpacing="0.02"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginTop="32dp">

                    <TextView
                        android:id="@+id/tv_date_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gradient_end"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_total_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp" android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="false"
                android:background="@drawable/light_card_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:background="@drawable/light_card_gradient"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Tasks"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tv_total_tasks_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gradient_end"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"
                        android:layout_marginHorizontal="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Status"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_done_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textSize="28sp"
                                android:textColor="@color/text_hint"
                                android:layout_marginHorizontal="4dp"/>

                            <TextView
                                android:id="@+id/tv_not_done_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#FF5252"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:indeterminateTint="@color/primary_purple"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_dashboard_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="100dp"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:background="@drawable/light_card_gradient">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Task Progress"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="20dp"/>

                        <com.example.letsdoit.TaskPieChartView
                            android:id="@+id/pie_chart_view"
                            android:layout_width="220dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="24dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="8dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/rounded_icon_background_red"
                                    android:backgroundTint="@color/chart_done"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/tv_done_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DONE 0"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginStart="8dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/rounded_icon_background_red"
                                    android:backgroundTint="@color/chart_not_done"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/tv_not_done_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PENDING 0"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="false">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_done"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#E8F5E9">

                            <View
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/rounded_icon_background_red"
                                android:backgroundTint="#4CAF50"
                                android:layout_marginBottom="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Done Tasks"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2E7D32"
                                android:layout_marginBottom="8dp"
                                android:maxLines="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details →"
                                android:textSize="13sp"
                                android:textColor="#66BB6A"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_not_done"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#FFF3E0">

                            <View
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/rounded_icon_background_red"
                                android:backgroundTint="#FF9800"
                                android:layout_marginBottom="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Tasks"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#E65100"
                                android:layout_marginBottom="8dp"
                                android:maxLines="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details →"
                                android:textSize="13sp"
                                android:textColor="#FFA726"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_fab_calendar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/dark_gradient_end">

        <ImageView
            android:id="@+id/fab_calendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar"
            android:scaleType="fitCenter"
            app:tint="@android:color/white" android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Open Calendar"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_calendar_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:text="CALENDAR"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:background="@drawable/rounded_tag_background"
        android:backgroundTint="@color/dark_gradient_end"
        android:elevation="10dp"
        android:visibility="gone"/>

</FrameLayout>